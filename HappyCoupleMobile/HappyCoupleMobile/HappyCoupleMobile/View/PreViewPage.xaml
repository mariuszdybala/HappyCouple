<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HappyCoupleMobile.View.PreViewPage">
    <StackLayout VerticalOptions="EndAndExpand" BackgroundColor="Aqua">
        <AbsoluteLayout BackgroundColor="{StaticResource SecondColor}" VerticalOptions="FillAndExpand">
            <Frame BackgroundColor="{StaticResource FirstColor}" 
                         AbsoluteLayout.LayoutFlags="XProportional" AbsoluteLayout.LayoutBounds="0.5,35,110,110"/>
            <BoxView BackgroundColor="{StaticResource FourthColor}" 
                         AbsoluteLayout.LayoutFlags="XProportional" AbsoluteLayout.LayoutBounds="0.5,40,100,100"/>
            <BoxView BackgroundColor="{StaticResource SecondColor}" 
                         AbsoluteLayout.LayoutFlags="XProportional" AbsoluteLayout.LayoutBounds="0.5,40,100,10"/>
            <Image Source="{StaticResource ShoppingBar}" AbsoluteLayout.LayoutFlags="XProportional" AbsoluteLayout.LayoutBounds="0.5,55,50,50"/>
            <Label Text="37 %" TextColor="White" AbsoluteLayout.LayoutFlags="XProportional" AbsoluteLayout.LayoutBounds="0.5,110"/>    
        </AbsoluteLayout>
    </StackLayout>
</ContentPage>