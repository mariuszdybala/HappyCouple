<?xml version="1.0" encoding="UTF-8"?>
<Label xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="HappyCoupleMobile.Mvvm.Controls.TappableLabel"
             x:Name="TappableCustomLabel">
    <Label.GestureRecognizers>
        <TapGestureRecognizer Command="{Binding Source={x:Reference TappableCustomLabel}, Path=TappedCommand}" CommandParameter="{Binding Source={x:Reference TappableCustomLabel}, Path=TappedCommandParameter}" />
    </Label.GestureRecognizers>
</Label>
