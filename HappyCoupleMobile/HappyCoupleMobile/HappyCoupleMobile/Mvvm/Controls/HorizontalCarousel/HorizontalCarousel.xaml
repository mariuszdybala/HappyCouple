<?xml version="1.0" encoding="UTF-8"?>
<renderers:ScrollBarLessScrollView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:renderers="clr-namespace:HappyCoupleMobile.Mvvm.Renderers;assembly=HappyCoupleMobile"
             xmlns:horizontalCarousel="clr-namespace:HappyCoupleMobile.Mvvm.Controls.HorizontalCarousel;assembly=HappyCoupleMobile"
             x:Class="HappyCoupleMobile.Mvvm.Controls.HorizontalCarousel.HorizontalCarousel"
             Orientation="Horizontal"
             x:Name="HorizontalCarousel">
	<StackLayout>
		<ActivityIndicator x:Name="LoadingIndicator" Scale="0.8" Color="{StaticResource ThirthColor}"/>
		<StackLayout x:Name="CarouselItemsContainer" HeightRequest="0" VerticalOptions="CenterAndExpand" Orientation="Horizontal"/>
	</StackLayout>
</renderers:ScrollBarLessScrollView>
